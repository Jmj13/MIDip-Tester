<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:id="@+id/test_level"
    android:layout_height="match_parent"
    android:background="@drawable/testlevel_background1"
    tools:context=".Test_Level">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="140dp"
            android:onClick="click_test_level1"
            android:src="@drawable/level1"/>

        <ImageView
            android:onClick="click_test_level2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/level2" />

        <ImageView
            android:onClick="click_test_level3"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/level3"/>
        <ImageView
            android:onClick="click_test_level4"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/level4" />

        <ImageView
            android:onClick="click_test_level5"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/level5"/>



    </LinearLayout>

</ScrollView>